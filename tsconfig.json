{
  "compilerOptions": {
    "rewriteRelativeImportExtensions": true,
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2024"],
    "types": ["vitest/globals"],
  },
  "include": ["src/**/*", "test/**/*", "eslint.config.ts"],
  "exclude": ["node_modules", "lib"]
}
